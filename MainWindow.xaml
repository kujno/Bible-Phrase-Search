<Window x:Class="Bible_Word_Finder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bible_Word_Finder"
        mc:Ignorable="d"
        Title="Bible Phrase Finder" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="61*" />
            <RowDefinition Height="355*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,61" Grid.RowSpan="2">
            <Menu>
                <MenuItem Header="File">
                    <MenuItem Header="Open" Click="menu_open_click" />
                    <MenuItem Header="Exit" Click="menu_exit_click" />
                </MenuItem>

                <MenuItem x:Name="menu_about" Header="About" Click="menu_about_click" />
            </Menu>
        </StackPanel>

        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120px" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <GroupBox Name="groupBox_search_in" Header="Search in:">
                    <ComboBox Name="comboBox_search_in" DropDownClosed="comboBox_search_in_dropDownClosed" />
                </GroupBox>

                <GroupBox Name="groupBox_book" Header="Book:">
                    <ComboBox Name="comboBox_book" DropDownClosed="comboBox_book_dropDownClosed" />
                </GroupBox>
                <GroupBox Name="groupBox_chapter" Header="Chapter:">
                    <ComboBox Name="comboBox_chapter" />
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <GroupBox Header="Searched phrase:">
                    <TextBox Name="textBox_searched_phrase" />
                </GroupBox>
                <GroupBox Header="Search results:">
                    <TextBlock Name="textBlock_search_results" />
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>